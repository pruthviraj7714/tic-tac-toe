generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  presence  PlayerPresence[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  rooms1 Room[] @relation("Player1")
  rooms2 Room[] @relation("Player2")
  games1 Game[] @relation("GamePlayer1")
  games2 Game[] @relation("GamePlayer2")
}

model Room {
  id            String     @id @default(uuid())
  name          String     @unique
  isPrivate     Boolean    @default(false)
  maxSpectators Int        @default(0)
  presence      PlayerPresence[]
  password      String?
  status        RoomStatus @default(PENDING)
  games         Game[]
  createdAt     DateTime   @default(now())

  player1Id String
  player2Id String?
  player1   User    @relation("Player1", fields: [player1Id], references: [id])
  player2   User?   @relation("Player2", fields: [player2Id], references: [id])
}

model Game {
  id          String     @id @default(uuid())
  roomId      String     @unique
  player1Id   String
  player2Id   String
  winner      Winner?
  boardState  String     @default("_________")
  moves       Json       @default("[]")
  currentTurn PlayerTurn @default(PLAYER1)
  status      GameStatus
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  room    Room @relation(fields: [roomId], references: [id])
  player1 User @relation("GamePlayer1", fields: [player1Id], references: [id])
  player2 User @relation("GamePlayer2", fields: [player2Id], references: [id])
}

model PlayerPresence {
  id       String   @id @default(uuid())
  userId   String
  roomId   String
  isOnline Boolean  @default(true)
  lastSeen DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])

  @@index([roomId])
  @@index([userId])
}

enum GameStatus {
  ONGOING
  WIN_X
  WIN_O
  DRAW
}

enum Winner {
  PLAYER1
  PLAYER2
  DRAW
}

enum PlayerTurn {
  PLAYER1
  PLAYER2
}

enum RoomStatus {
  PENDING
  FULL
  STARTED
  ENDED
}