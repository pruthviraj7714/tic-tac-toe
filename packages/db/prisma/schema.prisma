generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String      @id @default(uuid())
  username   String      @unique
  email      String      @unique
  password   String
  spectators Spectator[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @default(now())

  rooms1 Room[] @relation("Player1")
  rooms2 Room[] @relation("Player2")
  games1 Game[] @relation("GamePlayer1")
  games2 Game[] @relation("GamePlayer2")
}

model Room {
  id            String      @id @default(uuid())
  name          String    
  isPrivate     Boolean     @default(false)
  roomCode      Int          @unique
  maxSpectators Int         @default(0)
  password      String?
  status        RoomStatus  @default(PENDING)
  games         Game[]
  spectators    Spectator[]
  createdAt     DateTime    @default(now())

  player1Id String
  player2Id String?
  player1   User    @relation("Player1", fields: [player1Id], references: [id], onDelete: Cascade)
  player2   User?   @relation("Player2", fields: [player2Id], references: [id], onDelete: Cascade)
}

model Game {
  id            String     @id @default(uuid())
  roomId        String
  player1Id     String
  player2Id     String
  winner        Winner?
  boardState    String     @default("_________")
  moves         Json       @default("[]")
  currentTurn   PlayerTurn @default(PLAYER1)
  symbolPlayer1 Symbol     @default(X)
  symbolPlayer2 Symbol     @default(O)
  status        GameStatus
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  room    Room @relation(fields: [roomId], references: [id])
  player1 User @relation("GamePlayer1", fields: [player1Id], references: [id], onDelete: Cascade)
  player2 User @relation("GamePlayer2", fields: [player2Id], references: [id], onDelete: Cascade)
}

model Spectator {
  id     String @id @default(uuid())
  roomId String
  userId String

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum GameStatus {
  ONGOING
  WIN_X
  WIN_O
  DRAW
}

enum Winner {
  PLAYER1
  PLAYER2
  DRAW
}

enum PlayerTurn {
  PLAYER1
  PLAYER2
}

enum RoomStatus {
  PENDING
  FULL
  STARTED
  ENDED
}

enum Symbol {
  X
  O
}
