generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  email         String   @unique
  password      String
  roomAsPlayer1 Room[]   @relation("Player1")
  roomAsPlayer2 Room[]   @relation("Player2")
  gameAsPlayer1 Game[]   @relation("GamePlayer1")
  gameAsPlayer2 Game[]   @relation("GamePlayer2")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

model Room {
  id        String     @id @default(uuid())
  player1Id String
  player2Id String?
  player1   User       @relation("Player1", fields: [player1Id], references: [id])
  player2   User?      @relation("Player2", fields: [player2Id], references: [id])
  game      Game?
  status    RoomStatus @default(PENDING)
}

model Game {
  id        String @id @default(uuid())
  player1Id String
  player2Id String
  roomId    String @unique

  winner Winner?

  room    Room       @relation(fields: [roomId], references: [id])
  player1 User       @relation("GamePlayer1", fields: [player1Id], references: [id])
  player2 User       @relation("GamePlayer2", fields: [player2Id], references: [id])
  status  GameStatus
}

enum RoomStatus {
  PENDING
  FULL
  STARTED
  ENDED
}

enum GameStatus {
  ONGOING
  WIN_X
  WIN_O
  DRAW
}

enum Winner {
  PLAYER1
  PLAYER2
  DRAW
}
